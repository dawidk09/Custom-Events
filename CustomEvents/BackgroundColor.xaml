        <Button x:Name="blue"  Background="Blue" HorizontalAlignment="Left" Margin="155,160,0,0" VerticalAlignment="Top" FontSize="48" Height="73" Width="176" Click="Blue_Click"/>
        <Button x:Name="green"  Background="Green" HorizontalAlignment="Left" Margin="336,82,0,0" VerticalAlignment="Top" FontSize="48" Height="73" Width="176" Click="Green_Click"/>
    </Grid>
</Window>

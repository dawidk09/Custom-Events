        mc:Ignorable="d"
        Title="BackgroundColor" Height="450" Width="800">
    <Grid>
        <Button x:Name="red"  Background="Red" HorizontalAlignment="Left" Margin="155,82,0,0" VerticalAlignment="Top" FontSize="48" Height="73" Width="176" Click="Red_Click"/>
